<script>
        $(document).on('change', '.btn-file :file', function () {
            var input = $(this),
                numFiles = input.get(0).files ? input.get(0).files.length : 1,
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [numFiles, label]);
        });

        $(document).ready(function () {
            $('.btn-file :file').on('fileselect', function (event, numFiles, label) {

                var input = $(this).parents('.input-group').find(':text'),
                    log = numFiles > 1 ? numFiles + ' files selected' : label;

                if (input.length) {
                    input.val(log);
                } else {
                    if (log) alert(log);
                }

            });
        });
    </script>

    <div class="col-lg-6 col-sm-6 col-12">
        <label for="file">Ladda upp profilbild</label>
        <div class="input-group">
            <span class="input-group-btn">
                <span class="btn logoColorBackground btn-file">
                    Browse&hellip;<input id="uploadPicture" type="file" formenctype="multipart/form-data">
                </span>
            </span>
            <input type="text" class="form-control" readonly>
        </div>
        <br />
        <input onclick="submitPicture();" value="Ladda upp bild" class="btn logoColorBackground" />
    </div>



